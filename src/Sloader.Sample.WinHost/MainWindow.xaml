<Window x:Class="Sloader.Sample.WinHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sloader.Sample.WinHost"
        mc:Ignorable="d"
        Title="Sloader Runner for Windows Desktop" Height="450" Width="725">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox AcceptsReturn="True" Text="{Binding Input}"  Grid.Row="0" Grid.Column="0"></TextBox>
        <TextBox AcceptsReturn="True" Text="{Binding Output}" Grid.Row="0" Grid.Column="1"></TextBox>

        <Button Command="{Binding StartSloaderCommand}" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Height="30">Start Sloader Run</Button>
        
    </Grid>

</Window>
